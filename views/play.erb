<h1> <%= @game.player1.read_name %> vs <%= @game.player2.read_name %> </h1>

<h2> <%= @game.current_player.read_name %>'s turn </h2>

<h3><%=@game.player1.read_name %> HP: <%= @game.player1.read_hp %> | <%= @game.player2.read_name %> HP: <%= @game.player2.read_hp %> </h3>

<form action="/attack" method="post">
<label for="attack">Select attack:</label>
<select name="attack" id="attack">
    <option value="10">Punch</option>
    <option value="20">Stab</option>
    <option value="25">Flamethrower</option>
    <option value="5">Slap</option>
</select>
<input type="submit" value="Attack!">
</form>

<%if @game.started? %>
<h3> <%= @game.opponent.read_name %> attacked <%= @game.current_player.read_name %>! </h3>
<% end %>